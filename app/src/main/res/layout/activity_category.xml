<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3EFEA"
    tools:context=".CategoryActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="389dp"
        android:layout_height="119dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768">

        <ImageButton
            android:id="@+id/imageButtonFruits"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFEFE"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sliced_apple_fruit_transparent_png" />

        <ImageButton
            android:id="@+id/imageButtonMacaron"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/matcha" />

        <ImageView
            android:id="@+id/icecreamImage"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFDFD"
            app:srcCompat="@drawable/pngwing_com" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="377dp"
        android:layout_height="42dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833">

        <TextView
            android:id="@+id/fruitView"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:shadowColor="#DC5675"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.0"
            android:text="@string/CategoryActivity_fruit"
            android:textColor="#F19D9D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/macaronView"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:shadowColor="#DC5675"
            android:shadowDx="1.4"
            android:shadowDy="1.3"
            android:shadowRadius="1.0"
            android:text="@string/CategoryActivity_macaron"
            android:textColor="#F19D9D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/icecreamView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:shadowColor="#DC5675"
            android:shadowDx="1.4"
            android:shadowDy="1.3"
            android:shadowRadius="1.0"
            android:text="@string/CategoryActivity_icecream"
            android:textColor="#F19D9D"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484">

        <TextView
            android:id="@+id/drinksView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:shadowColor="#DC5675"
            android:shadowDx="1.3"
            android:shadowDy="1.3"
            android:shadowRadius="1.0"
            android:text="@string/CategoryActivity_drink"
            android:textColor="#F19D9D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pastaView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:shadowColor="#DC5675"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.0"
            android:text="@string/CategoryActivity_pasta"
            android:textColor="#F19D9D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pizzaView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:shadowColor="#DC5675"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.0"
            android:text="@string/CategoryActivity_pizza"
            android:textColor="#F19D9D"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="387dp"
        android:layout_height="130dp"
        android:layout_marginTop="32dp"
        android:gravity="center|top|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.272">

        <ImageButton
            android:id="@+id/imageButtonDrink"
            android:layout_width="207dp"
            android:layout_height="114dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cocktail"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/pastaImage"
            android:layout_width="212dp"
            android:layout_height="115dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/pngegg_1" />

        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="212dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#FFFFFF"
            android:hapticFeedbackEnabled="true"
            app:srcCompat="@drawable/pngkit_pizza_slice_png_6468_1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:fontFamily="@font/acme"
        android:shadowColor="#E91E63"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/CategoryActivity_title"
        android:textColor="#E15987"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

</androidx.constraintlayout.widget.ConstraintLayout>