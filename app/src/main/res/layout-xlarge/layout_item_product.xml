<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linearlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_product"
        android:layout_width="253dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#F9FADF"
        android:backgroundTint="#F9FADF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/blueberry_lemon"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="130dp"
        android:layout_height="219dp"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:text="Lemon Macaron"
        android:textColor="#40362F"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_productPrice"
        android:layout_width="80dp"
        android:layout_height="220dp"
        android:layout_weight="0"
        android:fontFamily="@font/sarala"
        android:gravity="center"
        android:text="60B"
        android:textColor="#40362F"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_product_add"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_weight="0"
        android:backgroundTint="#D5737E"
        android:text="+"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_product_del"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="0"
        android:backgroundTint="#ECB2B2"
        android:text="-"
        android:textSize="20sp" />

</LinearLayout>